{
  "version": "0.0.1",
  "manifest_version": 2,
  "name": "Ecosia Password Generator",
  "short_name": "Ecosia Password Gen",
  "description": "Plant trees... securely :D",
  "content_scripts": [
    {
      "matches": [
        "*://*.ecosia.org/*"
      ],
      "js": [
        "lib/js/browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "lib/js/browser-polyfill.js",
      "background.js"
    ]
  },
  "permissions": [
    "*://*.ecosia.org/*",
    "*://*.randomword.com/*",
    "webRequest",
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "activeTab"
  ],
  "icons": {
    "128": "img/icon-128.png",
    "256": "img/icon-256.png",
    "512": "img/icon-512.png"
  }
}
